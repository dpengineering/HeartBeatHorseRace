<RunScreen>:

    name: 'run'
    on_pre_enter: root.update_baseline()
    on_enter: root.start_game()

    FloatLayout:
        size_hint: None, None

    Widget:
        canvas:
            Rectangle:
                source: "Images/HorseBackground.png"
                size: self.size
                pos: self.pos

    Label:
        id: player1Baseline
        text: ""
        size_hint: None, None
        color: 1, 1, 1, 1
        center_x: root.width * 0.1
        center_y: root.height * 0.2
        font_size: 50
        bold: True
        outline_width: self.font_size * 0.1
        outline_color: 0, 0, 0

    Label:
        id: player2Baseline
        text: ""
        size_hint: None, None
        color: 1, 1, 1, 1
        center_x: root.width * 0.36
        center_y: root.height * 0.2
        font_size: 50
        bold: True
        outline_width: self.font_size * 0.1
        outline_color: 0, 0, 0

    Label:
        id: player3Baseline
        text: ""
        size_hint: None, None
        color: 1, 1, 1, 1
        center_x: root.width * 0.63
        center_y: root.height * 0.2
        font_size: 50
        bold: True
        outline_width: self.font_size * 0.1
        outline_color: 0, 0, 0

    Label:
        id: player4Baseline
        text: ""
        size_hint: None, None
        color: 1, 1, 1, 1
        center_x: root.width * 0.9
        center_y: root.height * 0.2
        font_size: 50
        bold: True
        outline_width: self.font_size * 0.1
        outline_color: 0, 0, 0

    Label:
        id: count
        text: "Get Ready!"
        size_hint: None, None
        color: 1, 1, 1, 1
        center_x: root.width * 0.5
        center_y: root.height * 0.85
        font_size: 50
        bold: True
        outline_width: self.font_size * 0.1
        outline_color: 0, 0, 0