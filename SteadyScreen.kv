<SteadyScreen>:

    name: 'steady'

    text_button:text_button
    back_button:back_button

    on_enter: root.start_steady_thread()

    FloatLayout:
        size_hint: None, None

    DPEAButton:
        id: text_button
        text: '10'
        size_hint: 0.21, 0.11
        x: root.width * 0.3
        y: root.height * 0.4
        color: 0.834, 0.23, 0.11, 1
        disabled: True

    DPEAButton:
        id: back_button
        text: 'Back'
        size_hint:0.21, 0.11
        x: root.width * 0.79
        y: root.height * 0.89
        color: 0.834, 0.23, 0.11, 1
