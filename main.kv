<MainScreen>:

    name: 'main'

    instructions_button:instructions_button
    continue_button:continue_button

     canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "horse_race.JPG"

     FloatLayout:
        size_hint: None, None
        source: "horse_race.JPG"
        allow_stretch: True
        keep_ratio: False

     DPEAButton:
        id: instructions_button
        text: 'How to Play'
        size_hint: 0.27, 0.11
        x: root.width * .17
        y: root.height * 0.22
        color: 0.834, 0.23, 0.11, 1
        on_press: root.instructions_screen()

     DPEAButton:
        id: continue_button
        text: 'Continue'
        size_hint: 0.27, 0.11
        x: root.width * 0.56
        y: root.height * 0.22
        color: 0.834, 0.23, 0.11, 1
        on_press: root.game_screen()

