<GameScreen>:

    name: 'game'

    normal_button:normal_button
    zen_button:zen_button
    chaos_button:chaos_button

    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "horse_race.JPG"

    FloatLayout:
        size_hint: None, None
        sorce: "horse_race.JPG"
        allow_stretch: True
        keep_ratio: False

    DPEAButton:
        id: normal_button
        text: 'Chaos'
        size_hint: 0.21, 0.11
        x: root.width * 0.75
        y: root.height * 0.22
        color: 0.834, 0.23, 0.11, 1
        on_press: root.run_chaos_thread()

    DPEAButton:
        id: zen_button
        text: 'Steady'
        size_hint: 0.21, 0.11
        x: root.width * 0.395
        y: root.height * 0.22
        color: 0.834, 0.23, 0.11, 1
        on_press: root.run_steady_thread()

    DPEAButton:
        id: chaos_button
        text: 'Zen'
        size_hint: 0.21, 0.11
        x: root.width * 0.04
        y: root.height * 0.22
        color: 0.834, 0.23, 0.11, 1
        on_press: root.run_zen_thread()

    DPEAButton:
        id: baseline_button
        text: 'Get Baseline'
        size_hint: 0.21, 0.11
        x: root.width * 0.05
        y: root.height * 0.84
        color: 0.834, 0.23, 0.11, 1
        on_press: root.get_baseline()