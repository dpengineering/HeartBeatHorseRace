<CounterScreen>:

    name: 'counter'

    on_enter: root.run_countdown_thread()

    counter_button:counter_button

    FloatLayout:
        size_hint: None, None

    DPEAButton:
        id: counter_button
        text: '40'
        size: 100, 100
        x: root.width * 0.5
        y: root.height * 0.5
        color: 0, 1, 0, 1