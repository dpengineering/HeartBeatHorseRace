<BeginningScreen>:

    name: 'beginning'

    FloatLayout:
        size_hint: None, None

    Widget:
        canvas:
            Rectangle:
                source: "Images/HorseBackground.png"
                size: self.size
                pos: self.pos

    DPEAButton:
        id: onePlayer
        text: '1 Player'
        size: 100, 100
        center_x: root.width * 0.25
        center_y: root.height * 0.8
        color: 0, 0, 1, 1
        on_press: root.one_player()

    DPEAButton:
        id: twoPlayer
        text: '2 Players'
        size: 100, 100
        center_x: root.width * 0.25
        center_y: root.height * 0.5
        color: 0, 0, 1, 1
        on_press: root.two_players()

    DPEAButton:
        id: threePlayer
        text: '3 Players'
        size: 100, 100
        center_x: root.width * 0.5
        center_y: root.height * 0.5
        color: 0, 0, 1, 1
        on_press: root.three_players()

    DPEAButton:
        id: fourPlayer
        text: '4 Players'
        size: 100, 100
        center_x: root.width * 0.75
        center_y: root.height * 0.5
        color: 0, 0, 1, 1
        on_press: root.four_players()


