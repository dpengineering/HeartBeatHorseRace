<BeginningScreen>:

    name: 'beginning'

    FloatLayout:
        size_hint: None, None

    Widget:
        canvas:
            Rectangle:
                source: "Images/HorseBackground.png"
                size: self.size
                pos: self.pos

    Button:
        id: twoPlayer
        size: 384, 96
        center_x: root.width * 0.5
        center_y: root.height * 0.6
        size_hint: None, None
        background_normal: "Images/2_Player_Button.png"
        color: 0, 0, 1, 1
        on_press: root.two_players()

    Button:
        id: threePlayer
        size: 384, 96
        center_x: root.width * 0.5
        center_y: root.height * 0.4
        size_hint: None, None
        color: 0, 0, 1, 1
        background_normal: "Images/3_Player_Button.png"
        on_press: root.three_players()

    Button:
        id: fourPlayer
        size: 384, 96
        center_x: root.width * 0.5
        center_y: root.height * 0.2
        size_hint: None, None
        color: 0, 0, 1, 1
        background_normal: "Images/4_Player_Button.png"
        on_press: root.four_players()


    DPEAButton:
        id: chaos
        text: 'Chaos Mode'
        size: 100, 100
        center_x: root.width * 0.33
        center_y: root.height * 0.85
        color: 0, 0, 1, 1

    DPEAButton:
        id: zen
        text: 'Zen Mode'
        size: 100, 100
        center_x: root.width * 0.66
        center_y: root.height * 0.85
        color: 0, 0, 1, 1

    DPEAButton:
        id: goBack
        text: 'Go Back'
        size: 100, 100
        center_x: root.width * 0.5
        center_y: root.height * 0.05
        color: 1, 0, 0, 1
        on_press: root.switch_screen1()