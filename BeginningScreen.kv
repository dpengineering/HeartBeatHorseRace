<BeginningScreen>:

    name: 'beginning'

    FloatLayout:
        size_hint: None, None


    DPEAButton:
        id: twoPlayer
        text: 'Two Players'
        size: 100, 100
        x: root.width * 0.2
        y: root.height * 0.5
        color: 0, 0, 1, 1
        on_press: root.two_players()

    DPEAButton:
        id: threePlayer
        text: 'Three Players'
        size: 100, 100
        x: root.width * 0.5
        y: root.height * 0.5
        color: 0, 0, 1, 1

    DPEAButton:
        id: fourPlayer
        text: 'Four Players'
        size: 100, 100
        x: root.width * 0.7
        y: root.height * 0.5
        color: 0, 0, 1, 1

    DPEAButton:
        id: goBack
        text: 'Go Back'
        size: 100, 100
        x: root.width * 0.5
        y: root.height * 0.05
        color: 1, 0, 0, 1
        on_press: root.switch_screen()